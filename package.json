{
  "name": "microvium",
  "private": false,
  "version": "0.0.6",
  "description": "A compact, embeddable scripting engine for microcontrollers for executing small scripts written in a subset of JavaScript.",
  "main": "dist/lib.js",
  "bin": {
    "microvium": "dist/cli.js",
    "microvm": "dist/cli.js",
    "mvm": "dist/cli.js"
  },
  "scripts": {
    "install": "node-gyp-build",
    "deploy": "npm publish --access=public",
    "prepublishOnly": "prebuildify --napi",
    "build": "node-gyp build --debug && tsc",
    "rebuild": "node-gyp rebuild --debug && tsc",
    "test": "node-gyp build --debug && tsc && mocha",
    "test:no-build": "mocha",
    "check-for-wip": "ts-node scripts/check-for-wip",
    "pass": "ts-node scripts/pass",
    "build:watch": "tsc --watch --preserveWatchOutput false"
  },
  "gypfile": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/coder-mike/microvium.git"
  },
  "keywords": [
    "MCU",
    "JavaScript",
    "ECMAScript",
    "Jessie",
    "interpreter",
    "scripting",
    "microcontroller"
  ],
  "author": "Michael Hunter",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/coder-mike/microvium/issues"
  },
  "homepage": "https://github.com/coder-mike/microvium#readme",
  "dependencies": {
    "argparse": "^1.0.10",
    "babylon": "^6.18.0",
    "bindings": "^1.5.0",
    "crc": "^3.8.0",
    "deep-equal": "^2.0.2",
    "deep-freeze": "0.0.1",
    "double-ended-queue": "^2.1.0-0",
    "escape-html": "^1.0.3",
    "fastpriorityqueue": "^0.6.3",
    "fs-extra": "^9.0.0",
    "immutable": "^4.0.0-rc.12",
    "lodash": "^4.17.15",
    "node-addon-api": "^2.0.0",
    "node-gyp-build": "^4.2.1",
    "smart-buffer": "^4.1.0",
    "to-single-quotes": "^3.0.0"
  },
  "devDependencies": {
    "@types/argparse": "^1.0.38",
    "@types/babylon": "^6.16.5",
    "@types/chai": "^4.2.9",
    "@types/crc": "^3.4.0",
    "@types/deep-equal": "^1.0.1",
    "@types/deep-freeze": "^0.1.2",
    "@types/double-ended-queue": "^2.1.1",
    "@types/escape-html": "0.0.20",
    "@types/fs-extra": "^8.1.0",
    "@types/glob": "^7.1.1",
    "@types/immutable": "^3.8.7",
    "@types/lodash": "^4.14.149",
    "@types/mocha": "^7.0.1",
    "@types/node": "^13.11.0",
    "@types/yaml": "^1.2.0",
    "chai": "^4.2.0",
    "colors": "^1.4.0",
    "glob": "^7.1.6",
    "mocha": "^7.0.1",
    "ts-node": "^8.8.1",
    "typescript": "^3.8.3",
    "yaml": "^1.8.3"
  }
}
